<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >

    <VideoView
        android:id="@+id/dummy_remote_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="6dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/main_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <svt.webrtc.SurfaceViewRenderer
            android:id="@+id/local_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <svt.webrtc.SurfaceViewRenderer
            android:id="@+id/remote_view"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:elevation="5dp"
            android:visibility="visible" />

        <com.smartvist.idverify.GraphicOverlay
            android:id="@+id/graphic_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_button"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:background="@drawable/sv_start"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/call_button"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/call_button"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:background="@drawable/sv_call"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chatrotate_buton"
        app:layout_constraintStart_toEndOf="@id/start_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hangup_button"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:background="@drawable/sv_hangup"
        android:elevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/exit_button"
        app:layout_constraintStart_toEndOf="@id/rotate_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit_button"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:background="@drawable/sv_logout"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hangup_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rotate_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sv_rotate"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/hangup_button"
        app:layout_constraintStart_toEndOf="@id/chatrotate_buton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chatrotate_buton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/sv_rotate"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rotate_button"
        app:layout_constraintStart_toEndOf="@id/call_button" />
</androidx.constraintlayout.widget.ConstraintLayout>